            <tr>

                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                

            </tr>
        </thead>

        <tbody>
            <% for(var i=0; i < results.length; i++) { %>
            <tr>
                <td><%= results[i].ID %></td>
                <td><%= results[i].Nombre %></td>
                <td><%= results[i].Apellido %></td>
                <td><%= results[i].Correo %></td>


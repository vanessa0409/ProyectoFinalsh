    <script >
        function update(nombre, correo) {

            console.log(nombre);
            document.getElementById('nombre').value = nombre;
            console.log(correo);
            document.getElementById('correo').value = correo;


        }

     
    </script>
    
</head>


<body>
   
    <% if (results.length>0){ %>
    <table class="table table-borderless">
